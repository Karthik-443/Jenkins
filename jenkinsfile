pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                sh 'python3 hello.py'
            }
            post {
                success {
                    emailext subject: 'Build Success Notification',
                        body: 'The build succeeded!',
                        to: 'karthikramachandren@gmail.com'
                }
                failure {
                    emailext subject: 'Build Failure Notification',
                        body: 'The build failed!',
                        to: 'karthikramachandren@gmail.com'
                }
            }
        }
    }
}
